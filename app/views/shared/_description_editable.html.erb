<% display = local_assigns.fetch :display, "inline-block" %>

<div id="<%= task.id %>_description_div"
     class="editable editable-click description"
     style="display: <%= display %>;" data-escape="false"
     title="Description" data-value="<%= task.description %>"
     data-url="/tasks/<%= task.id %>" data-type="textarea"
     data-placeholder="Description" data-name="description" data-model="task">
  <%= raw task.description_parsed %>
</div>

<% placeholder = local_assigns.fetch :placeholder, "New task..." %>
<%= form_for(task) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :title, placeholder: placeholder %>
  </div>
  <%= f.hidden_field(:parent_id) unless task.parent_id.nil? %>
  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
